CC=gcc
CFLAGS=-O2 -std=c99 -Wall -pedantic
OUTFILE=ifj2017

all: $(OUTFILE)

.PHONY: clean

ifj2017: *.c *.h
	$(CC) $(CFLAGS) *.c -o $(OUTFILE)

clean:
	rm *.o $(OUTFILE)
